<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<%- include('./partials/headerLogueado') %>
			<!-- /Header -->

			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Agregar productos</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<h2 class="col-12">
						<form action="/products/productAdd" method="POST" class="formulario-registro" novalidate>
							<label for="foto">Imagen del Producto:</label><br>
							<input type="text" id="foto" name="foto"><br><br>

							<% if (locals.errors && errors.foto) { %>
								<div class="error-msg">
									<%= errors.foto.msg %>
								</div>
								<% } %>
									<br>
									<label for="producto">Nombre del Producto:</label><br>
									<input type="text" id="producto" name="producto"><br><br>

									<% if (locals.errors && errors.producto) { %>
										<div class="error-msg">
											<%= errors.producto.msg %>
										</div>
										<% } %>

											<br>

											<label for="descripcion">Descripci√≥n del Producto:</label><br>
											<input type="text" name="descripcion" id="descripcion">

											<% if (locals.errors && errors.descripcion) { %>
												<div class="error-msg">
													<%= errors.descripcion.msg %>
												</div>
												<% } %>

													<br>

													<button type="submit" class="submit-button">Agregar
														Producto</button>
						</form>
					</h2>


					<!-- footer -->
					<%- include('./partials/footer') %>
						<!-- /footer -->
	</body>

</html>