<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

    <body>
        <!-- Header -->
        <%- include('./partials/headerLogueado') %>
            <!-- /Header -->

            <!-- Formulario de Edición de Producto -->
            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Editar Producto</h2>
                    </div>
                    <div class="col-12">
                        <form action="/products/edit/<%= product.id %>" method="POST" novalidate>
                            <label for="foto">Imagen del Producto:</label><br>
                            <input type="text" id="foto" name="foto" value="<%= product.foto %>"><br><br>

                            <% if (locals.errors && errors.foto) { %>
                                <div class="error-msg">
                                    <%= errors.foto.msg %>
                                </div>
                                <% } %>

                                    <br>

                                    <label for="producto">Nombre del Producto:</label><br>
                                    <input type="text" id="producto" name="producto"
                                        value="<%= product.producto %>"><br><br>

                                    <% if (locals.errors && errors.product) { %>
                                        <div class="error-msg">
                                            <%= errors.producto.msg %>
                                        </div>
                                        <% } %>

                                            <br>

                                            <label for="descripcion">Descripción del Producto:</label><br>
                                            <input type="text" id="descripcion" name="descripcion"
                                                value="<%= product.descripcion %>"><br><br>

                                            <% if (locals.errors && errors.descripcion) { %>
                                                <div class="error-msg">
                                                    <%= errors.descripcion.msg %>
                                                </div>
                                                <% } %>

                                                    <br>

                                                    <button type="submit" class="submit-button">Editar Producto</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /Formulario de Edición de Producto -->

            <!-- Footer -->
            <%- include('./partials/footer') %>
                <!-- /Footer -->
    </body>

</html>