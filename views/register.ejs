<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> <form action="/users/register" class="formulario-registro" method="POST">
				<label for="email">Email:</label>
				<input type="email" id="email" name="email" value="<%= locals.oldData && oldData.email ? oldData.email : null %>">
				<% if (locals.errors && errors.email) { %> 
					<div class="error-msg"><%= errors.email.msg %></div>
				<% } %><br><br>
				
				<label for="usuario">Usuario:</label>
				<input type="text" id="usuario" name="usuario" value="<%= locals.oldData && oldData.usuario ? oldData.usuario : null %>">
				<% if (locals.errors && errors.usuario) { %> 
					<div class="error-msg"><%= errors.usuario.msg %></div>
				<% } %>
				<br><br>


				<label for="password">Contraseña:</label><br>
				<input type="password" id="password" name="password" value=""><br><br>
				
				<label for="fecha">Fecha de Nacimiento:</label>
				<input type="date" id="fecha" name="fecha" value=""><br>
				<% if (locals.errors && errors.fecha) { %> 
					<div class="error-msg"><%= errors.fecha.msg %></div>
				<% } %>
				<br><br>
				
				<label for="dni">Número de Documento:</label><br>
				<input type="number" id="dni" name="dni" value=""><br><br>

				<label for="foto">Foto de perfil:</label><br>
				<input type="text" id="foto" name="foto" value=""><br><br>
				
				<button type="submit">Registrate</button>
			</form>
			</h2>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>