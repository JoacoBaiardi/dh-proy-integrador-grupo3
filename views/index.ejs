<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 4; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= indProd[i].id %>">
							<figure class="product-box_image">
								<img src="../images/products/<%= indProd[i].imagen %>" alt="<%= indProd[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= indProd[i].nombre %></h2>
								<p><%= indProd[i].descripcion %></p>
								<p>Comentarios: <%= indProd[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>	
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 6; i < 10; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= indProd[i].id %>">
							<figure class="product-box_image">
								<img src="../images/products/<%= indProd[i].imagen %>" alt="<%= indProd[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= indProd[i].nombre %></h2>
								<p><%= indProd[i].descripcion %></p>
								<p>Comentarios: <%= indProd[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>	
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>